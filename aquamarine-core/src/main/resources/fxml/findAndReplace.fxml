<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="findAndReplaceContainer" prefHeight="80.0" styleClass="findAndReplaceContainer" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jewel.knight.aquamarine.controller.FindAndReplaceController">
    <HBox styleClass="findContainer">
        <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="312.0" styleClass="findInnerContainer">
            <TextField fx:id="findInput" prefHeight="40.0" promptText="Search" styleClass="findInput" />
            <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" styleClass="findBtn" text="N">
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin></Button>
            <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" styleClass="findBtn" text="M">
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin></Button>
            <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" styleClass="findBtn" text="W">
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin></Button>
            <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" styleClass="findBtn" text="R">
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin>
            </Button>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="100.0" styleClass="findMidContainer" HBox.hgrow="ALWAYS">
            <Text fx:id="resultText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="result" text="0 results">
                <HBox.margin>
                    <Insets left="30.0" />
                </HBox.margin>
            </Text>
        </HBox>
        <HBox alignment="CENTER" prefWidth="50.0" styleClass="rightContainer">
            <Button fx:id="findCloseBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" styleClass="findCloseBtn" textAlignment="CENTER">
            <font>
               <Font size="10.0" />
            </font>
            </Button>
        </HBox>
    </HBox>
    <HBox styleClass="replaceContainer">
        <HBox fx:id="replaceInnerContainer" prefHeight="40.0" prefWidth="312.0" styleClass="replaceInnerContainer">
            <TextField fx:id="replaceInput" prefHeight="40.0" prefWidth="312.0" promptText="Replace" />
        </HBox>
        <HBox fx:id="replaceInnerButtonContainer" alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="100.0" styleClass="replaceInnerButtonContainer" HBox.hgrow="ALWAYS">
            <Button fx:id="replace" mnemonicParsing="false" prefHeight="20.0" text="Replace">
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin></Button>
            <Button fx:id="replaceAll" mnemonicParsing="false" prefHeight="20.0" text="Replace All">
            <HBox.margin>
               <Insets left="8.0" />
            </HBox.margin>
            </Button>
        </HBox>
      <HBox fx:id="blankContainer"  />

    </HBox>

</VBox>
